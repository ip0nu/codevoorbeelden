{% extends "CoreBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="row">
        <div class="form-group col-md-12">
            <label class="sr-only">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="input-big" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
        </div>
        <div class="form-group col-md-12">
            <label class="sr-only">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="input-big" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
        </div>
    </div>
    <div class="row margin-bottom-10">
        <div class="form-group col-md-6 col-sm-6">
            <button type="button" onclick="document.location = '{{ path('fos_user_registration_register') }}'" class="btnAction icon-profile">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</button>
        </div>
        <div class="form-group col-md-6 col-sm-6">
            <button type="submit" class="btnAction icon-login pull-right" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 col-sm-6">
            <a href="">Forgot Password</a>
        </div>
        <div class="form-group col-md-6 col-sm-6">
            <div class="checkbox pull-right">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>

    <!--div class="row">
        <div class="col-md-6 col-sm-6 text-right">
            <a href="">Change Password</a>
        </div>
    </div-->
</form>

{% endblock fos_user_content %}
